{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "jsx": "react",
    "strict": true,
    "outDir": "./out",
    "typeRoots": [
      "node_modules/@types",
      "app/typings"
    ]
  },
  "exclude": [
    "node_modules",
    "app/node_modules",
    "dist",
    "out"
  ],
  "compileOnSave": false
}
